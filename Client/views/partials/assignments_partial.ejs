<!-- EJS-like syntax directly in HTML -->
<% if (assignments && assignments.length > 0) { %>
    <% assignments.forEach(function(assignment) { %>
  
      <!-- Content Section -->
      <div class="courseName" id="courseName">
        <p>Assignment <%= assignment.exerid %></p>
      </div>
  
      <!-- Assignment List -->
      <div class="assignmentList assignment">
        <div id="accordion">
          <div class="card">
            <div class="card-header" id="headingOne">
              <h5 class="mb-0">
                <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                  <p id="assignment1" class="textCenter">Assignment <%= assignment.exerid %></p>
                </button>
              </h5>
            </div>
  
            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
              <div class="card-body">
                <p id="desc1"><%= assignment.description %></p>
                <a href="" class="btn btn-primary">Start Assignment</a>
              </div>
            </div>
          </div>
        </div>
      </div>
  
    <% }); %>
  <% } else { %>
    <p>No assignments available.</p>
  <% } %>
  <!-- End of EJS-like syntax -->